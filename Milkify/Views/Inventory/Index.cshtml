
@{
    ViewData["Title"] = "Inventory";
}
@model Milkify.Core.Datatable.DatatableRequests.DatatableResult

<div class="card">
    <div class="card-header"><h5>Inventories</h5></div>
    <div class="card-body">
        @if (User.IsInRole("Admin"))
        {
            <a class="btn btn-primary mb-2" asp-action="Create">Create Inventory</a>
        }
        <form asp-action="Index" method="get">
            @{
                <div class="row">
                    <div class="col-4">
                        <div class="form-group">
                            <select name="ProductId" id="ProductId" class="form-control" asp-items="ViewBag.ProductId">
                                <option value="">-- Select Product --</option>
                            </select>
                        </div>
                    </div>

                    @*<div class="col-4">
                        <div class="form-group">
                            <div class="form-group">
                                <select name="WarehouseId" id="WarehouseId" class="form-control" asp-items="ViewBag.WarehouseId">
                                    <option value="">-- Select Warehouse --</option>
                                </select>
                            </div>
                        </div>
                    </div>*@

                    <div class="col-4">
                        <div class="form-group">
                            <input type="submit" value="Filter" class="btn btn-primary" />
                            <a class="btn btn-secondary" asp-action="Index">Clear Filters</a>
                        </div>
                    </div>
                </div>
            }
        </form>

        @await Html.PartialAsync("~/Views/Common/Datatable.cshtml", @Model)
    </div>
</div>


<script>
    $(document).ready(function() {
        $('#ProductId').select2({
            placeholder: "Select Product",
            allowClear: true,
            theme: "bootstrap"
        });
    });
</script>