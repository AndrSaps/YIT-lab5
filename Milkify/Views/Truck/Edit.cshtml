@{
    ViewData["Title"] = "Trucks";
}
@using Microsoft.AspNetCore.Mvc.Rendering
@using Milkify.Core.Dtos
@using Milkify.Core.Datatable.DatatableRequests
@using Milkify.Core.Entities
@using Milkify.Core.Enums
@using Milkify.Core.Extensions
@using Milkify.Services
@model Milkify.Core.Dtos.TruckDto

<div class="card">
    <div class="card-header"><h5>Edit Truck</h5></div>
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="SerialNumber" class="control-label">Serial Number</label>
                        <input asp-for="SerialNumber" type="number" class="form-control" />
                        <span asp-validation-for="SerialNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LiftingWeight" class="control-label">Lifting Weight</label>
                        <input asp-for="LiftingWeight" type="number" class="form-control" />
                        <span asp-validation-for="LiftingWeight" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Edit" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
